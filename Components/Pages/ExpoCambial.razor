@rendermode InteractiveServer
@page "/expocambial"

<PageTitle>Expo Cambial</PageTitle>

<div class="container-fluid p-3">
    <div class="row">
        <div class="col-12">
            <!-- Label Bradesco (posicionado à direita como no original) -->
            <div class="d-flex justify-content-between align-items-start mb-4">
                <div></div> <!-- Espaço vazio à esquerda -->
                <h5 class="text-primary">Bradesco Custódia e Serviços Financeiros</h5>
            </div>

            <!-- GroupBox Nome -->
            <fieldset class="border rounded p-3 mb-3" style="max-width: 250px;">
                <legend class="w-auto px-2" style="font-size: 0.9rem;">Nome</legend>
                <input type="text" class="form-control form-control-sm"
                       value="Usuario.Exemplo" readonly disabled
                       style="background-color: #f8f9fa;" />
            </fieldset>

            <!-- GroupBox Mês Referência -->
            <fieldset class="border rounded p-3 mb-3" style="max-width: 130px;">
                <legend class="w-auto px-2" style="font-size: 0.9rem;">Mês Referência</legend>
                <input type="text" class="form-control form-control-sm"
                       value="08/2025" readonly disabled
                       style="background-color: #f8f9fa;" />
            </fieldset>

            <!-- GroupBox Departamento -->
            <fieldset class="border rounded p-3 mb-3" style="max-width: 250px;">
                <legend class="w-auto px-2" style="font-size: 0.9rem;">Departamento</legend>
                <input type="text" class="form-control form-control-sm"
                       value="Departamento Exemplo" readonly disabled
                       style="background-color: #f8f9fa;" />
            </fieldset>

            <!-- Label Norma (fora de qualquer groupbox) -->
            <div class="mb-3">
                <label class="form-label">
                    Eu Usuario.Exemplo, do departamento Departamento Exemplo estou ciente de norma X
                </label>
            </div>

            <!-- GroupBox Escolha (sem título visível como no original) -->
            <fieldset class="border rounded p-3 mb-4" style="max-width: 600px;">
                <div class="mb-3">
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="escolha" id="rbSim" checked />
                        <label class="form-check-label" for="rbSim">
                            Estou ciente da norma Y
                        </label>
                    </div>
                </div>
                <div class="mb-2">
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="escolha" id="rbNao" />
                        <label class="form-check-label" for="rbNao">
                            Não estou ciente da norma Y
                        </label>
                    </div>
                </div>
            </fieldset>

            <!-- Botão Enviar -->
            <div class="mb-4">
                <button type="button" class="btn btn-primary btn-sm" style="width: 80px;">
                    Enviar
                </button>
            </div>

            <!-- Label Email (posicionado mais à direita) -->
            <div class="d-flex justify-content-end">
                <small class="text-muted">
                    Em caso de dúvidas entrar em contato com fulano@email.com
                </small>
            </div>
        </div>
    </div>
</div>